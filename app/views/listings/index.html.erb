<div class="jumbotron">
  <h1>Handcrafted items from around the world</h1>
  <h2>Discover one-of-a-kind items</h2>
</div>

<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-4">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <h4><%= number_to_currency(listing.price) %></h4>
            <h4><%= "Sold by #{listing.user.name}" %></h4>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% if user_signed_in? %>  
  <%= link_to 'New Listing', new_listing_path, class: 'btn btn-link' %>
<% end %>